---
import {
  locales,
  defaultLocale,
  localeLabels,
  localeFlags,
  socials,
  type Locale,
} from "../data/site";

const { lang, t, portfolio } = Astro.props as {
  lang: Locale;
  t: {
    title: string;
    intro: string;
    bio: string;
    cta: string;
    sectionAbout: string;
    sectionPortfolio: string;
    sectionProjects: string;
    sectionContact: string;
    portfolioIntro: string;
    projectsIntro: string;
    aboutBio: string;
    aboutCreative: string;
    aboutOrigins: string;
    aboutOriginsTitle: string;
    creativeTitle: string;
    professionalTitle: string;
    readyToCollaborate: string;
    asyncContact: string;
    languageLabel: string;
    heroImageAlt: string;
    featuredProjectDescription: string;
    featuredProjectTagOpenSource: string;
    contactFormIntro: string;
    contactFormCta: string;
  };
  portfolio: {
    title: string;
    description: string;
    tags: string[];
    link: string;
  }[];
};

const rawBaseUrl = import.meta.env.BASE_URL;
const baseUrl = rawBaseUrl.endsWith("/") ? rawBaseUrl : `${rawBaseUrl}/`;
const localePath = (code: Locale) => (code === defaultLocale ? baseUrl : `${baseUrl}${code}/`);
const heroImageSrc = `${baseUrl}hero.png`;
---

<header class="hero">
  <nav class="nav">
    <div class="brand">Luigi Brandolini</div>
    <div class="nav-links">
      <a href="#about">{t.sectionAbout}</a>
      <a href="#portfolio">{t.sectionPortfolio}</a>
      <a href="#projects">{t.sectionProjects}</a>
      <a href="#contact">{t.sectionContact}</a>
    </div>
    <div class="lang-switch">
      <label class="sr-only" for="lang-select">{t.languageLabel}</label>
      <select
        id="lang-select"
        class="lang-select"
        name="lang"
        onChange="window.location.href=this.value"
      >
        {locales.map((code) => (
          <option value={localePath(code)} selected={code === lang}>
            {localeFlags[code]} {localeLabels[code]}
          </option>
        ))}
      </select>
      <noscript>
        <div class="lang-links">
          {locales.map((code) => (
            <a href={localePath(code)}>
              {localeFlags[code]} {localeLabels[code]}
            </a>
          ))}
        </div>
      </noscript>
    </div>
  </nav>

  <div class="hero-grid">
    <div class="hero-copy">
      <h1>{t.title}</h1>
      <div class="hero-image-mobile">
        <img
          src={heroImageSrc}
          alt={t.heroImageAlt}
          loading="eager"
        />
      </div>
      <p class="lead">{t.intro}</p>
      <p class="bio">{t.bio}</p>
      <a class="cta" href="#contact">
        <svg class="cta-icon" viewBox="0 0 24 24" aria-hidden="true">
          <path
            fill="currentColor"
            d="M20 4H4c-1.1 0-2 0.9-2 2v12c0 1.1 0.9 2 2 2h16c1.1 0 2-0.9 2-2V6c0-1.1-0.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
          />
        </svg>
        {t.cta}
      </a>
    </div>
    <div class="hero-image">
      <img
        src={heroImageSrc}
        alt={t.heroImageAlt}
        loading="eager"
      />
    </div>
  </div>
</header>

<main class="main">
  <section id="about" class="section">
    <div class="section-head">
      <h2>{t.sectionAbout}</h2>
    </div>
    <div class="about-grid">
      <div class="about-block about-origins">
