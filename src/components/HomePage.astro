      <h2>{t.sectionPortfolio}</h2>
      <p>{t.portfolioIntro}</p>
    </div>
    <div class="portfolio-grid">
      {portfolio.map((item) => (
        <article class="portfolio-card">
          <div>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
          <div class="card-footer">
            <div class="tags">
